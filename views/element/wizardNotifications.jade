.section
	h1 Notifications
	p Add the custom notifications for your customers
.section
	#elementNotifications
		.section.darkSection.mainNotificationActivation
			h2 In-app notification
			p Turn on/off the in-app notifications about this element
			.circleButtonActiveNotifications(ng-class="{'active':elements[selectedElement].activateNotification===activeValue}" ng-click="setNotificationActive()" )
				.icon.icon-bell
					p Activate Notification
		.section.darkSection.notificationOptions(ng-repeat="el in elements[selectedElement].notifications" ng-disabled="elements[selectedElement].activateNotification!==activeValue")
			.circleButtonNotification( ng-click="setNotificationActiveAt($index)"  ng-class="{'disabled':elements[selectedElement].activateNotification!==activeValue,'active':el.isActive===activeValue}")
				.icon.icon-hand-like-1.stimulus(ng-if="el.notificationType==='1'" )
				.icon.icon-link-3.engage(ng-if="el.notificationType==='2'")
				.icon.icon-loop-3.convert(ng-if="el.notificationType==='3'")
			.notifcationGroup(ng-if="el.notificationType==='1'")
				h2 Stimulus
				p Stimulus notification text.
				input.form-control(type="text" ng-model="el.text" placeholder="Text here." ng-disabled="elements[selectedElement].activateNotification !==activeValue || el.isActive !== activeValue" ng-blur="validate()")
			.notifcationGroup(ng-if="el.notificationType==='2'")
				h2 Engage
				p Engage notification
				input.form-control(type="text" ng-model="el.text" placeholder="Text here." ng-disabled="elements[selectedElement].activateNotification !==activeValue || el.isActive !== activeValue" ng-blur="validate()")
			.notifcationGroup(ng-if="el.notificationType==='3'")
				h2 Convert
				p Convert notification
				input.form-control(type="text" ng-model="el.text" placeholder="Text here." ng-disabled="elements[selectedElement].activateNotification !==activeValue || el.isActive !== activeValue" ng-blur="validate()")