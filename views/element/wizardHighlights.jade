.section
	h1 Highlights
	p Add the Highlights of the element
	#highlightsSection
		.section.darkSection
			.row
				i.icon.icon-cash-register
				.highlightTitle
					h2 Price
					p Element Price
			.row
				form.novalidate
					select(title='Currency' name="Currency"  ng-model="elements[selectedElement].currencyType" select-picker)
						option(value='1') &#36;
						option(value='2') &#162;
						option(value='3') &#8359;
						option(value='4') &#128;
					checkbox.btn-checkbox( ng-model="hasListPriceBool" ng-change="changeBoolStateHighlights('hasListPrice', hasListPriceBool)" large )
					input.title-value.highlightInput(type="text" ng-model="elements[selectedElement].listPrice" ng-disabled="!hasListPriceBool" placeholder="List Price**" ng-blur="validate()" required is-number)
					checkbox.btn-checkbox( ng-model="hasDiscountBool" ng-change="changeBoolStateHighlights('hasDiscount', hasDiscountBool)" large)						
					input.title-value.highlightInput(type="text" ng-model="elements[selectedElement].discount" ng-disabled="!hasDiscountBool"  placeholder="Discount **" ng-blur="validate()" required is-number)
					input.title-value.highlightInput(type="text" ng-model="elements[selectedElement].price" placeholder="Price **" ng-blur="validate()" required is-number)
					input.title-value.highlightInput(type="text" ng-model="elements[selectedElement].savings" placeholder="Savings **" ng-blur="validate()" required is-number)
		.section.darkSection
			.row
				i.price.icon.icon-timer-1
				.highlightTitle
					h2 Limit Time
					p Limit Time
			.row
				form.novalidate
					checkbox.btn-checkbox( ng-model="hasTimmingBool" ng-change="changeBoolStateHighlights('hasTimming', hasTimmingBool)" large)
					input.highlightInput(type="datetime" date-time ng-model="elements[selectedElement].initialDate" ng-disabled="!hasTimmingBool" placeholder="Initial Date**" ng-blur="validate()" required readonly)
					input.highlightInput(type="datetime" date-time ng-model="elements[selectedElement].expirationDate" ng-disabled="!hasTimmingBool" placeholder="Expiration Date**" ng-blur="validate()" required readonly)
		.section.darkSection
			.row
				i.price.icon.icon-cube
				.highlightTitle					
					h2 Quantity
					p The information type is an element that describe a product or service
			.row
				form.novalidate
					checkbox.btn-checkbox( ng-model="hasQuantityBool" ng-change="changeBoolStateHighlights('hasQuantity', hasQuantityBool)" large)
					input.highlightInput(type="text" ng-model="elements[selectedElement].quantity"  ng-disabled="!hasQuantityBool" placeholder="Quantity **" ng-blur="validate()" required is-number)