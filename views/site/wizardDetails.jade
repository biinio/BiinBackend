form.novalidate
	.section
		h1 Site detail
		p Add site information to your organization here. Information that will be shown on the mobile app is mark with **
	.section
		h2 Site title
		.row			
			input.form-control.title-value(ng-model="sites[selectedSite].title1" name="title1" type="text" placeholder="Tittle **"  ng-blur="validate()"  required )
		.row
			input.form-control.title-value(ng-model="sites[selectedSite].title2" name="title1" type="text" placeholder="Subtittle **" ng-blur="validate()"  required )
		.row
			h4 Identifier: {{sites[selectedSite].identifier}}
	.section
		h2 Search criteria
		p This information could be useful to others for found your information
		row
			.search-criteria-control
				.search-body
					.searchScroll.scrollbar-inner(scrollbar="scrollbarOptionsStandard")
						.col-md-1.tag(ng-repeat="tag in sites[selectedSite].searchTags")
							.btn-close(ng-click="removeSiteTag($index)")
								span X
							p {{tag}}
				.search-add
					.col-md-9
						input.form-control(ng-model="newTagField")
					.col-md-3
						button.btn.btn-default(ng-click="addSiteTag(newTagField);newTagField=''" ng-enter="addSiteTag(newTagField);newTagField=''") Add