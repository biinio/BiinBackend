.verticalScroll.colAppend(jquery-scrollbar="scrollbarOptionsStandard")
	.section
		h1 Gallery
		p Add some images to your site so users on the mobile app see yours stores looks like
	.section(drop)
		.row
			.ownedGalleryWrapper.scrollbar-inner(scrollbar="scrollbarOptionsOwnedGallery" )
				.img-block(ng-repeat="item in sites[selectedSite].media")
					.moduleWrapper.moduleWrapper-inverse.contentHideButtons
						img.img-responsive(ng-src="{{item.imgUrl}}" pending-indicator)
						.btnShowcasePreview.icon-round-control.btnDelete.btn-on-hover(ng-click="removeMediaAt(sites[selectedSite].media.indexOf(item))")
							.icon.icon-bin-2
	.section
		.row
			.galleryWrapper
				include ../_partials/galleryWidget
