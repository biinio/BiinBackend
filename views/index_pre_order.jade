extends layout_landing_page_out
block head_scripts
	script(src="/landingPage/js/angular/landing.js")
block content
	#contentWrapper
		section#preorder
			.container
				.row
					.col-md-6
						.row
							h1 Excelente! Pre-ordena sus Biin Beacons ahora
							p Pre-Ordene los Biin Beacons y sea de los primeros en traer la experiencia de Biin a sus
								|empresa. Perm&iacute;tenos saber a quien estaremos contactando cuando los Biin Beacons
								| est&eacute;n disponibles.								
						form#pre-order-form.row(action="#" name="pre-registform", method="post")
							label= "Usted est√° pre-ordenando el PAQUETE " + packageSlected
							input#name.form-control(type='text' name='full_name' placeholder='Full Name' required)
							input#company.form-control(type='text', name='company', placeholder='Company (mandatory if shipping to a business addres)', required)
							input#email.form-control(type='text', name='email', placeholder='Email', required)
							input#phone.form-control(type='text', name='phone', placeholder='Phone number', required)
							input#country.form-control(type='text', name='country', placeholder='Country **', required)
							input#state.form-control(type='text', name='state', placeholder='State', required)
							input#city.form-control(type='text', name='City', placeholder='City', required)
							input#zipCodes.form-control(type='text', name='ZipCodes', placeholder='Zip Code', required)
							input#streetAddres.form-control(type='text', name='streetAddres', placeholder='Street Address', required)
							.row
								.cantidadPaquetes
									p Cantidad de Paquetes
									.input-group.spinner
										input#qty.form-control(type="text" value="0" name="qty" placeholder='How many are you interested')
										.input-group-btn-vertical
											button.btn.btn-default
												i.fa.fa-caret-up
											button.btn.btn-default
												i.fa.fa-caret-down								
							input#pack.hidden(type="tex" name="plan" value=packageSlected)
							select#plan.selectpicker(title='Seleccione una subscripcion' name="pack" multiple data-max-options="1")
								option LITE
								option STANDART
								option PREMIUN												
							input.validateCheck(type="checkbox" name="termsAdCond")
							span
								| He le&iacute;do y estoy de acuerdo con los t&eacute;rminos de venta de Biin.
						.row.text-center
							input#btn-preOrder.btn.btn-black.btn-lg.btnEnviar(type="submit" value="Enviar" disabled)
							label.sent-message
					.col-md-6
						.row.imgPreOrder
							img(src="/landingPage/img/thumbs/biinBeacon.png")
		section#registerSucced.blue(style="display: none;")
			.container
				.row
					.col-md-6
						.thankYuoTitleBeacons
							h1 Gracias por pre-ordenar nuestros beacons.
						.thankYouParagraph
							p Te estaremos contactando muy pronto con noticias importantes de Biin.
						.row
							.thankYouButton
								a.btn.btn-black(href="/") Continua disfrutando de nuestro sitio web.
					.col-md-6
						.row
							.happyBiinie
								img(src="/images/happyBiinieWhite.png")