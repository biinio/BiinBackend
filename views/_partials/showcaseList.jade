.panel.panel-default
	.panel-heading.control-group.form-inline
		label Showcase  	
		input.form-control.search-box(ng-model="query" placeholder="Search" autofocus)		
		.roundedOptionsForm
			a.btn.btn-rounded.pull-right(href="#")
				i +
			a.btn.btn-rounded.pull-right(href="#" ng-click="saveDetail()")
				i S		
		.options
			.row
				.col-md-10
					.form-inline
						.form-inline
							.dropdown
								button#dropdownMenu1.btn.dropdown-toggle.sr-only(type='button', data-toggle='dropdown')
									| Dropdown
									span.caret
								ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu1')
									li(role='presentation')
										a(role='menuitem', tabindex='-1', href='#') Action
									li(role='presentation')
										a(role='menuitem', tabindex='-1', href='#') Another action
									li(role='presentation')
										a(role='menuitem', tabindex='-1', href='#') Something else here
									li.divider(role='presentation')
									li(role='presentation')
										a(role='menuitem', tabindex='-1', href='#') Separated link
	.body-list
		.col-lg-4.col-md-3.col-sm-3.col-list
			.row
				a.col-md-1.module(ng-repeat="item in showcases | filter: query | orderBy:orderShowcases" ng-click="edit($index)")					
					.moduleWrapper(ng-class="{active: $index == selectedShowcase}")				
						img.img-responsive(ng-src="{{item.mainImageUrl[0].value}}" style="max-width: 250px;height: auto;" pending-indicator)
		.col-lg-8.col-md-9.col-sm-9.colOptions
			.animate-switch(ng-if="selectedShowcase!=null")
				ul.nav.nav-tabs
					li(ng-class="{active:activeTab == 'details'}")
						a(ng-click="activeTab='details'") Details
					li(ng-class="{active:activeTab == 'objects'}")
						a(ng-click="activeTab='objects'") Elements
				.row
					.col-md-6.col-sm-6.colPreview
						#wrapperShowcase.copperEditor(data-image-src="{{showcases[selectedShowcase].mainImageUrl[0].value}}" image-cropper)
						input#showcaseImage.hidden(ng-model="showcases[selectedShowcase].mainImageUrl[0].value" input-change="")							
						label.previewLabel.title1(style="color:{{showcases[selectedShowcase].titleColor}}; font-size:{{showcases[selectedShowcase].titleSize}}") {{showcases[selectedShowcase].title}}
						label.previewLabel.title2(style="color:{{showcases[selectedShowcase].titleColor2}}; font-size:{{showcases[selectedShowcase].titleSize2}}") {{showcases[selectedShowcase].title2}}
						label.previewLabel.title3(style="color:{{showcases[selectedShowcase].titleColor3}}; font-size:{{showcases[selectedShowcase].titleSize3}}") {{showcases[selectedShowcase].title3}}
					.col-md-6.col-sm-6.colPreview
						.tab-content(ng-switch='activeTab')					
							#details(ng-switch-when='details')
								.hidden
									input.form-control( ng-model="showcases[selectedShowcase].identifier")				
									input.form-control( ng-model="showcases[selectedShowcase].customerId")														
									input.form-control( ng-model="showcases[selectedShowcase].organizationId")
								.row
									label Title 1:							
								.row
									span.form-group.form-control.form-picker														     				
										input(ng-model="showcases[selectedShowcase].title")										
										spectrum-colorpicker.picker(ng-model="showcases[selectedShowcase].titleColor" options="{showInput: true, showAlpha: true, preferredFormat: 'rgb'}")				
										span.separator
										select.selectpicker(ng-model="showcases[selectedShowcase].titleSize")
											option(value="5px") XS
											option(value="15px") S
											option(value="25px") L
											option(value="35px") XL
										span.caret-reversed
										span.caret
								.row
									label Title 2:		
								.row									
									span.form-group.form-control.form-picker
										input( ng-model="showcases[selectedShowcase].title2")
										spectrum-colorpicker.picker(ng-model="showcases[selectedShowcase].titleColor2" options="{showInput: true, showAlpha: true, preferredFormat: 'rgb'}")									
										span.separator
										select.selectpicker(ng-model="showcases[selectedShowcase].titleSize2")
											option(value="5px") XS
											option(value="15px") S
											option(value="25px") L
											option(value="35px") XL
										span.caret-reversed
										span.caret											
								.row
									label Title 3:
								.row
									span.form-group.form-control.form-picker
										input( ng-model="showcases[selectedShowcase].title3")
										spectrum-colorpicker.picker(ng-model="showcases[selectedShowcase].titleColor3" options="{showInput: true, showAlpha: true, preferredFormat: 'rgb'}")																		
										span.separator
										select.selectpicker(ng-model="showcases[selectedShowcase].titleSize3")
											option(value="5px") XS
											option(value="15px") S
											option(value="25px") L
											option(value="35px") XL
										span.caret-reversed
										span.caret
								.hidden										
									label Type:				
									input.form-control( ng-model="showcases[selectedShowcase].type")
								label Theme:				
								input.form-control( ng-model="showcases[selectedShowcase].theme")
								label Description:				
								textarea.form-control( ng-model="showcases[selectedShowcase].showcaseDescription")																					
								button.btn.btn-default.form-control Save
							#objects(ng-switch-when='objects')		
								.body-list
									.col-list																				
										.row.elementList											
											.col-md1.moduleWrapperElement.searchElements
												input.form-control( ng-model="queryElements" placeholder="Search" autofocus)										
											a.col-md1(ng-repeat="element in elements | filter:queryElements")
												.moduleWrapperElement
														img.imgElementPreview(ng-src="{{element.imageUrl[0].value}}" pending-indicator)
			.animate-switch(ng-if="selectedShowcase==null")				
