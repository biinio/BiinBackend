	body(ng-app="landingPage" ng-controller="indexController")

		//HEADER=============================================
		header#header
			.nav.navbar-helper
				ul.nav.navbar-nav.navbar-right
					li(style='cursor: pointer;').dropdown
						ul.dropdown-menu.loginDropDown
							li
								h4 Biin Dashboard login.
								form.loginForm(action='/login', method='POST')
									input.form-control.input-block-level(name='username', type='text', placeholder='e-mail')
									input#passwordInput.form-control.input-block-level(name='password', type='password', placeholder='password')
									a.forgotPass.pull-right(href='') Forgot password?
									div(data-toggle='buttons-checkbox')
										.checkbox.stayLogged
											label
												input(type='checkbox')
												| Stay Logged In
										span.adviceLoggedIn.pull-left Keep me logged in until I log out
										a#buttonLogin.btn.btn-theme.fulllWidth Login
										a#buttonSignUP.btn.btn-theme.btn-signUp.fulllWidth Sign up						
					//li.btn-group
						a.dropdown-toggle(data-toggle='dropdown')
							img(src="/landingPage/img/thumbs/spanishIcon.png" ng-if="lang==='ES'")
							img(src="/landingPage/img/thumbs/englishIcon.png" ng-if="lang==='EN'")
						ul.dropdown-menu.langsDropDown							
							li
								img(src="/landingPage/img/thumbs/englishIcon.png" ng-click="changeLanguage('EN')" ng-if="lang!=='EN'")
							li
								img(src="/landingPage/img/thumbs/spanishIcon.png" ng-click="changeLanguage('ES')" ng-if="lang!=='ES'")
			.navbar.navbar-fixed-top.scroll-fixed-navbar
				.container
					.transparency					
					.navbar-header
						//Responsive Menu
						button#nav-toggle.navbar-toggle(type='button', data-toggle='collapse', data-target='#navigation-menu')
							span.sr-only Toggle navigation
						//Logo Image
						a.navbar-brand(href='#top-page-banner')
							img(src='/images/biinLogoSlogan.png', alt='logo', role='banner')					
					//Navigation Menu
					nav#navigation-menu.collapse.navbar-collapse(role='navigation')
						ul.nav.navbar-nav.navbar-right
							li
								a(href='/#intro' translate="MENU.HOME")
							li
								a(href='/#videoHistory' translate="MENU.MEETBIIN")
							li
								a(href='/#banner_1' translate="MENU.MOBILEAPP")
							li
								a(href='/#crm_banner' translate="MENU.CMS")
							li
								a(href='/#banner_2' translate="MENU.BEACONS")
							li
								a(href='/#pricing' translate="MENU.PRICES")
							li
								a(href='/#contact' translate="MENU.CONTACT")
							li
								a(href='/#newsletter' translate="MENU.NEWS")
					//End nav-collapse
				//End container
			//End navbar
		//END form-inline

