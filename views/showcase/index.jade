extends ../layout_dashboard
block head_scripts
	script(src="/javascripts/angular/showcasesController.js")
block content	
	#sectionContent(ng-app="biinAppShowCases" ng-controller="showcasesController" ngCloack)
		#wrapperContent(data-organizationId=""+organization.identifier data-organizationName=""+organization.name)
			.left-section-content.unretracted
				.container-fluid.main-views-list
					.hideButton
						.unretracted.icon-arrow-37
						.retracted.icon-arrow-38
					.row
						.scroll-vertical-container.scrollbar-inner(scrollbar="scrollbarOptionsStandard")
							.col-xs-12.col-sm-12.col-md-12.col-lg-12.searchBoxList
									.col-md-2
										button.btn.btnAdd(ng-click='create()') &#43;
									.col-md-10
										.searchBox-wrapper
											input.form-control(type="text" placeholder="filter" ng-model="query" autofocus)
							.col-xs-12.col-sm-12.col-md-12.col-lg-12.nopadding(ng-repeat="item in showcases | orderBy : '+name' | filter: query" ng-click="edit(showcases.indexOf(item))")
									.moduleWrapperList.contentHideButtons(ng-class="{active: showcases.indexOf(item) == selectedShowcase}")
										.col-md-3.thumbListImage
											img(ng-if="item.elements.length == 0" src="data:image/svg+xml;base64,", alt='')
											img(ng-if="item.elements.length>0" ng-src="{{item.elements[0].media[0].url}}" pending-indicator)													
										.col-md-9
											label.moduleTitle {{item.name}}
											.btnDelete.icon-round-control.btn-on-hover(ng-click="openConfirmation('sm',showcases.indexOf(item))")
												.icon.icon-bin-2
											.btnShowcasePreview.icon-round-control.btn-on-hover
												.icon.icon-arrange-1
			.right-section-content.normalSize
				div(ng-if="selectedShowcase!=null")
					.animate-switch.wizard-wrapper
						.wizard-body.wizard(ng-switch="wizardPosition" ng-mouseleave="save()")
							#wizardOption1.wizard
								include wizardDetails
							#wizardOption2.wizard
								include wizardElements
							#wizardOption3.wizard
								include wizardBiins