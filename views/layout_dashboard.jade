	script(src="/imagesloaded/imagesloaded.pkgd.js")
	script(src="/lodash/dist/lodash.js")
	script(src="/jquery-knob/js/jquery.knob.js")
	script(src="/javascripts/h5utils.js")
	script(src="/javascripts/ui.js")
	script(src="/javascripts/croppic.js")
	script(src="/spectrum/spectrum.js")
	script(src="/angular-spectrum-colorpicker/dist/angular-spectrum-colorpicker.js")
	script(src="/bootstrap-select/bootstrap-select.js")
	script(src="/angular-bootstrap-select/build/angular-bootstrap-select.js")
	//todo remove the slim scroll reference
	script(src="/jquery.slimscroll/jquery.slimscroll.js")
	script(src="/angular-slimscroll/angular-slimscroll.js")
	script(src="/angular-animate/angular-animate.js")
	script(src="/jquery-ui/ui/jquery.ui.core.js")
	script(src="/jquery-ui/ui/jquery.ui.widget.js")
	script(src="/jquery-ui/ui/jquery.ui.mouse.js")
