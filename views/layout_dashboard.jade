doctype html
html
	head
		title= title
		<!-- Bootstrap -->
		link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/sidebar.css')
		link(rel='stylesheet', href='/stylesheets/croppic.css')
		link(rel="stylesheet" href="/spectrum/spectrum.css")
		link(rel="stylesheet" href="/bootstrap-select/bootstrap-select.css")
		link(rel="stylesheet" href="/javascripts/jquery.scrollbar/jquery.scrollbar.css")
		<!-- Google Fonts --> 
		<!--link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,700,700italic,800,800italic' rel='stylesheet' type='text/css')--> 
		<!--link(href='http://fonts.googleapis.com/css?family=Lato:400,900italic,900,700italic,400italic,300italic,300,100italic,100' rel='stylesheet' type='text/css')--> 
		<!-- CMS custom CSS -->
		link(rel="stylesheet" href="/stylesheets/main.css")
		<!-- Font font-streamline. -->
		link(rel="stylesheet" href="/stylesheets/font-streamline.css")
		script(src="/angular/angular.js")
		script(src="/angular-route/angular-route.js")
		script(src="/javascripts/angular/app.js")
		block head_scripts
		script(src="/javascripts/angular/naturalSortVersion.js")
		base(href="/")
		//block head
	body
		include layout_menu
		.container-fluid.main-container
			.row.main-container-row
				.col-sm-1.col-md-1.sidebar
					ul.nav.nav-sidebar.menu
						li.form-inline
							a(href="/home", style='text-align: center;') 
								.icon.icon-house-2(style='font-size:30px;')
								| HOME
						li
							a(href="/organizations", style='text-align: center;') 
								.icon.icon-id-4(style='font-size:30px;') 
								| ORGANIZATION

						if organization == null
							ul#organizationNav.nav.nav-sidebar.hide(data-organization="")
								li
									span.name="Selected Organization"
								li
									a(href="" data-org-link="/organizations/{0}/sites" style='text-align: center;') 
										.icon.icon-garage(style='font-size:30px;')
										| SITES
								li
									a(href="" data-org-link="/organizations/{0}/showcases" style='text-align: center;') 
										.icon.icon-book-1(style='font-size:30px;')
										| SHOWCASES
								li
									a(href="" data-org-link="/organizations/{0}/elements" style='text-align: center;') 
										.icon.icon-bookmark-4-1(style='font-size:30px;')
										| ELEMENTS
								//li
									a(href="" data-org-link="/organizations/{0}/gallery" style='text-align: center;') 
										.icon.icon-coins-2(style='font-size:30px;')
										| GALLERY
						else
							ul#organizationNav.nav.nav-sidebar(data-organization=organization.identifier)
								li
									span.name= organization.name	
								li
									a(href="/organizations/"+organization.identifier+"/sites" data-org-link="/organizations/{0}/sites" style='text-align: center;') 
										.icon.icon-garage(style='font-size:30px;')
										| SITES
								li
									a(href="/organizations/"+organization.identifier+"/elements" data-org-link="/organizations/{0}/elements" style='text-align: center;') 
										.icon.icon-bookmark-4-1(style='font-size:30px;')
										| ELEMENTS
								li
									a(href="/organizations/"+organization.identifier+"/showcases" data-org-link="/organizations/{0}/showcases" style='text-align: center;') 
										.icon.icon-book-1(style='font-size:30px;')
										| SHOWCASES
								//li
									a(href="/organizations/"+organization.identifier+"/gallery" data-org-link="/organizations/{0}/gallery" style='text-align: center;') 
										.icon.icon-coins-2(style='font-size:30px;')
										| GALLERY
						li
								a(href="#" style='text-align: center;') 
									.icon.icon-rss-1(style='font-size:30px;')
									| NEWS
						li
							a(href="/errors" style='text-align: center;') ERRORS
							i.fa.fa-angle-right.angle-icon-sidebar
				.col-sm-11.col-sm-offset-1.col-md-11.col-md-offset-1.main
					block content
	script(src="/jquery/dist/jquery.min.js")
	script(src="/javascripts/jquery.scrollbar/jquery.scrollbar.js")							
