doctype html
html(lang='es')
	head
		//Basic 
		meta(charset='utf-8')
		title Biin
		meta(name='author', content='Biin')
		meta(name='keywords', content='ibeacons, micro-location, context, awareness, mobile app, BLE')
		meta(name='description', content='En Biin estamos creando la primera plataforma para información y beneficios aprovechando la microlocalización por medio de iBeacons. Con una aplicacion móvil, universal y de uso grauito, visitantes de comercios, lugares de entretenimiento o instituciones, tendrán acceso a la información relevante para el contexto.')
		
		//Mobile Specific Metas 
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		
		//Libs CSS 
		link(href='/landingPage/stylesheets/bootstrap.css', rel='stylesheet')
		link(href='/landingPage/stylesheets/font-awesome.min.css', rel='stylesheet')
		link(href='/landingPage/stylesheets/flexslider.css', rel='stylesheet')
		link(href='/landingPage/stylesheets/magnific-popup.css', rel='stylesheet')

		//Template CSS 
		link(href='/landingPage/stylesheets/style.css', rel='stylesheet')

		//Responsive CSS 
		link(href='/landingPage/stylesheets/responsive.css', rel='stylesheet')
		
		//Favicons 
		link(rel='shortcut icon', href='/images/favicon.ico')
		
		//Google Fonts
		link(href='/landingPage/stylesheets/google-fonts-lato.css', rel='stylesheet', type='text/css')
		link(href='/landingPage/stylesheets/google-fonts-open-sans.css', rel='stylesheet', type='text/css')
		script(src='/jquery/dist/jquery.js', type='text/javascript')
		script(src="/angular/angular.js")
		script(src="/angular-route/angular-route.js")
		script(src="/javascripts/angular/app.js")
		script(src="/angular-translate/angular-translate.min.js")
		script(src="/angular-translate-loader-static-files/angular-translate-loader-static-files.min.js")
		block head_scripts
	body(ng-app="landingPage" ng-controller="indexController")
		//CONTENT WRAPPER============================================= 
		#content-wrapper
			block content
		//END CONTENT WRAPPER 
		//EXTERNAL SCRIPTS=============================================
		script(src='/landingPage/js/bootstrap.min.js', type='text/javascript')
		script(src='/landingPage/js/modernizr.custom.js', type='text/javascript')
		script(src='/landingPage/js/retina.js', type='text/javascript')
		script(src='/landingPage/js/jquery.stellar.min.js')
		script(src='/landingPage/js/jquery.superslides.js', type='text/javascript')
		script(src='/landingPage/js/jquery.parallax-1.1.3.js', type='text/javascript')
		script(src='/landingPage/js/jquery.magnific-popup.min.js', type='text/javascript')
		script(defer='defer', src='/flexslider/jquery.flexslider.js', type='text/javascript')
		script(defer='defer', src='/landingPage/js/jquery.validate.min.js', type='text/javascript')
		script(src='/landingPage/js/custom.js', type='text/javascript')