.section
	h1(translate="ORGANIZATION.TITLE")
	p(translate="ORGANIZATION.SUB_TITLE")
#organization.section.form-horizontal
	.row
		#organizationListWrapper.scrollbar-inner(scrollbar="scrollbarOptionsStandard")
			.img-block.btnCreate(ng-click="createOrganization()")
				.moduleWrapper
					span(translate="ORGANIZATION.ADD_NEW")
			.img-block(ng-repeat="item in organizations" ng-click="editOrganization(organizations.indexOf(item))" ng-class="{'active':item.identifier===currentModelId}")
				.moduleWrapper.contentHideButtons
					.moduleTitle {{item.name}}
					img.imagegallery.img-responsive(ng-src="{{item.media[0].imgUrl}}" pending-indicator)				
					.btnShowcasePreview.icon-round-control.btnDelete.btn-on-hover(ng-click="openConfirmation('sm',organizations.indexOf(item))")
						.icon.icon-bin-2
	.row.organizationInformation(ng-if="selectedOrganization!==''" ng-mouseleave="saveOrganization()" )
		.col-md-4
			img(ng-if="organizations[selectedOrganization].media.length===0 || organizations[selectedOrganization].media[0].imgUrl.length===0" src="data:image/svg+xml;base64,", alt='')
			img(ng-if="typeof(organizations[selectedOrganization].media)!=='undefined' && organizations[selectedOrganization].media.length>0 && organizations[selectedOrganization].media[0].imgUrl.length > 0" ng-src="{{organizations[selectedOrganization].media[0].imgUrl}}"  pending-indicator)
			a.btn.btn-default(upload-organization-image="#organizationInput")(translate="GENERIC.UPLOAD_IMAGE")
			input.hidden#organizationInput(type="file")				
		.col-md-8
			.form-group
				label.col-sm-2.control-label(for='name')(translate="ORGANIZATION.NAME")
				.col-sm-10
					input.form-control(type="text" placeholder="Name **" ng-model="organizations[selectedOrganization].name")
			.form-group
				label.col-sm-2.control-label(for='brand')(translate="ORGANIZATION.BRAND")
				.col-sm-10						
					input#brand.form-control(type="text" placeholder="Brand Name **" ng-model="organizations[selectedOrganization].brand")
			.form-group
				label.col-sm-2.control-label(for='desc')(translate="ORGANIZATION.INFORMATION")
				.col-sm-10												
					textarea#description.form-control(placeholder="Description **" ng-model="organizations[selectedOrganization].description")
			.form-group
				label.col-sm-2.control-label(for='extraInfo')(translate="ORGANIZATION.MORE_INFO")
				.col-sm-10										
					input#extraInfo.form-control(type="text" placeholder="Extra Information **" ng-model="organizations[selectedOrganization].extraInfo")			
			label.organizationId(translate="ORGANIZATION.ORG_ID"): {{organizations[selectedOrganization].identifier}}
			