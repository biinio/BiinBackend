.section
	h1 Profile
	p Please add the information for your profile
#profileSection.section.form-horizontal(ng-mouseleave="save()")
	.row
		img(ng-if="account.profile.profilePhoto.length===0" src="data:image/svg+xml;base64,", alt='')
		img(ng-if="account.profile.profilePhoto.length > 0" ng-src="{{account.profile.profilePhoto}}" pending-indicator)
		a.btn.btn-default(upload-profile-image="#profileInput") Upload Image
		input.hidden#profileInput(type="file")
		h2 Contact information
		p Please fill the contact information
		.form-group
			label.col-sm-2.control-label(for='firstName') First Name
			.col-sm-10		
				input#firstName.form-control(placeholder="First Name" ng-model="account.profile.displayName")
		.form-group
			label.col-sm-2.control-label(for='lastName') Last Name
			.col-sm-10							
				input#lastName.form-control(placeholder="Last Name" ng-model="account.profile.lastName")
		.form-group
			label.col-sm-2.control-label(for='userName') User Name
			.col-sm-10												
				input#userName.form-control(placeholder="User Name" ng-model="account.profile.name" read-only)
		.form-group
			label.col-sm-2.control-label(for='email') E-mail
			.col-sm-10										
				input#email.form-control(placeholder="Email" ng-model="account.profile.emails[0]")
		.form-group
			label.col-sm-2.control-label(for='phoneNumber') Phone Number
			.col-sm-10										
				input#phoneNumber.form-control(placeholder="Phone Number" ng-model="account.profile.phoneNumber")
