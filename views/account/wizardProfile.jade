.section
	h1 Profile
	p Please add the information for your profile
.section#profileSection(ng-mouseleave="save()")
	.row
		img(ng-if="account.profile.profilePhoto.length===0" src="data:image/svg+xml;base64,", alt='')
		img(ng-if="account.profile.profilePhoto.length > 0" ng-src="{{account.profile.profilePhoto}}" pending-indicator)
		a.btn.btn-default(upload-profile-image="#profileInput") Upload Image
		input.hidden#profileInput(type="file")
		h2 Contact information
		p Please fill the contact information
		input.form-control(placeholder="First Name" ng-model="account.profile.displayName")
		input.form-control(placeholder="Last Name" ng-model="account.profile.lastName")
		input.form-control(placeholder="User Name" ng-model="account.profile.name" read-only)
		input.form-control(placeholder="Email" ng-model="account.profile.emails[0]")
		input.form-control(placeholder="Phone Number" ng-model="account.profile.phoneNumber")
