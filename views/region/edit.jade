extends ../layout_dashboard
block content	
	#sectionContent
		#wrapper
			#wrapperHeader.row
				h1 Regions
			#wrapperContent.row
				.panel.panel-default
					.panel-heading
						p="Editing: "+region.identifier
					.panel-body
						.list-group
							form(method="POST" action="/regions/"+region.identifier)
								p Identifier
								input(type="text" name="identifier" value=region.identifier)
								p Radious
								input(type="text" name="radious" value=region.radious)
								p Latitude
								input(type="text" name="latitude" value=region.latitude)
								p Longitude
								input(type="text" name="longitude" value=region.longitude)
								input.btn(type="submit" value="Save")
