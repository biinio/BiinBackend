#!/usr/bin/env node
var fs= require('fs'), http = require('http'), https = require('https');
var debug = require('debug')('BinnCMS'),
	db=require('../biin_modules/db'),
	app = require('../biin_modules/app')(db);

var PORT = process.env.PORT || 3000;
app.set('port', PORT);

//Https credentials
var privateKey  = fs.readFileSync('sslcert/server.key', 'utf8');
var certificate = fs.readFileSync('sslcert/combined.crt', 'utf8');
var credentials = {key: privateKey, cert: certificate};

//Create the server
server = https.createServer(credentials, app).listen(PORT);
console.log('HTTPS Server listening on %s', PORT);